{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ],
    "ts-node-dev": {
        "compilerOptions": {
            "module": "esnext"
        }
    }
}